{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./backend/src",
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["backend/src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
